{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "alwaysStrict": true,
    "charset": "utf-8",
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false
  },
  "compileOnSave": true
}
